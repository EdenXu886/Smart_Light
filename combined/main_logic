// Main Loop
WHILE (TRUE) DO
    // Read Ambient Light Level
    ambientLight = READ_ANALOG(LIGHT_SENSOR_PIN)
    PRINT "Ambient Light Level: ", ambientLight

    // Read Distance from VL53L1X
    distance = READ_DISTANCE_FROM_SENSOR()
    PRINT "Distance: ", distance, " mm"

    // Light Control Logic
    IF (distance < PROXIMITY_THRESHOLD AND ambientLight < AMBIENT_LIGHT_THRESHOLD) THEN
        // Turn ON the light
        SET RELAY_PIN to LOW (Light ON)
        PRINT "Light ON"
    ELSE
        // Turn OFF the light
        SET RELAY_PIN to HIGH (Light OFF)
        PRINT "Light OFF"
    END IF

    // Delay for stability
    WAIT(500 milliseconds)
ENDÂ WHILE
